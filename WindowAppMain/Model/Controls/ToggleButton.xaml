<UserControl x:Class="WindowAppMain.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowAppMain"
             mc:Ignorable="d" Height="50" Width="100">
    <UserControl.Resources>
        <Style x:Key="ToggleEllipse" TargetType="{x:Type Ellipse}">
            <Setter Property="Fill" Value="White"/>
        </Style>

    </UserControl.Resources>

    <Viewbox Margin="0,2,2,1">
        <Grid HorizontalAlignment="Left" Height="60" Margin="0" VerticalAlignment="Top" Width="100">
            <Rectangle x:Name="Back" Fill="Black" HorizontalAlignment="Left" Height="56" VerticalAlignment="Top" Width="96" Margin="2,2,0,0" RadiusY="29" RadiusX="29" MouseLeftButtonDown="Back_MouseLeftButtonDown"/>
            <Ellipse x:Name="Dot"  HorizontalAlignment="Center" Height="48" VerticalAlignment="Center" Width="48" MouseLeftButtonDown="Dot_MouseLeftButtonDown" Margin="26,6" Style="{DynamicResource ToggleEllipse}"/>
        </Grid>
    </Viewbox>
</UserControl>
